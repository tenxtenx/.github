{
  "extends": [
    "github>tenxtenx/.github//renovate-presets/base",
    ":skipStatusChecks"
  ],
  "packageRules": [
    {
      "description": "Auto-merge non-major updates after 7 days",
      "matchUpdateTypes": ["minor", "patch", "pin", "lockFileMaintenance"],
      "automerge": true,
      "automergeType": "branch",
      "stabilityDays": 7
    }
  ]
}
